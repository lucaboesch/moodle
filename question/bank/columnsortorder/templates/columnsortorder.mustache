{{!
    @template qbank_columnsortorder/columnsortorder

    Admin question bank setting template.

    Context variables required for this template:
    * name - plugin name
    * hiddenname - class/columname

    Example context (json):
    {
        "names": [
            {
                "name": "Column A",
                "colname": "col_name_A",
                "class": "class_name_A"
            },
            {
                "name": "Column B",
                "colname": "col_name_B",
                "class": "class_name_B"
            }
        ]
    }
}}
<div>
    {{#str}}qbanksortdescription, qbank_columnsortorder{{/str}}
</div>
<br>
<div id="show-hide-dropdown">
</div>
<table class="generaltable table-responsive" id="qbank_columnsortorder-{{uniqid}}"
       data-pinnedcolumns="{{pinnedcolumns}}" data-hiddencolumns="{{hiddencolumns}}" data-colsize="{{colsize}}">
    <thead>
        <tr class="column item list-group-item list-group-item-action">
            {{#names}}
                <th class="border-left border-right header" data-pluginname="{{class}}" data-name="{{name}}">
                    {{>qbank_columnsortorder/column_cell}}
                </th>
            {{/names}}
        </tr>
    </thead>
</table>

<br>
<div>
    {{#columnsdisabled}}
        {{#str}}qbankcolumnsdisabled, qbank_columnsortorder{{/str}}
        <br>
    {{/columnsdisabled}}
    {{#disabled}}
        <div class="list-group-item disabled">
            {{disabledname}}
        </div>
    {{/disabled}}
</div>
{{#js}}
    require(['qbank_columnsortorder/qbank_admin_action'], function(AdminTable) {
        AdminTable.init("qbank_columnsortorder-{{uniqid}}");
    });
{{/js}}
<br>
<div>
    {{{urltomanageqbanks}}}
</div>
